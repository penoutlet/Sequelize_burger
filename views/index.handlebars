<div class = 'row'> 
	<div class = 'col-lg-6'>	
		<h2> Burgers to Eat </h2>

			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<div class = 'row'>
							<div class = 'col-sm-3'>
			
								<li> 
									<p><strong>{{this.id}}.</strong>  <i>{{this.burger_name}}</i>  </p>
									<form  action="/{{this.id}}?_method=PUT" method = "POST">
									<input type="hidden" name="devoured" value="1">
									<input type = 'hidden' id = 'burger' name = 'name'>
			
							</div>
							<div class = 'col-sm-2'>
			
								<button type="submit"  id = 'devour-button' class="btn btn-warning">Devour</button>
			
					
									</form>
							</div>
							<div class = 'col-sm-2'>
									<form  action="/{{this.id}}?_method=DELETE" method = "POST">
									<input type="hidden" name="devoured" value="1">
									<input type = 'hidden' id = 'burger' name = 'name'>
									<button type="submit"  id = 'devour-button' class="btn btn-danger">Delete</button>

					
									</form>
					  				
					  				<label for = 'burger'> </label>
							</div>
								</li>
						</div>
								
					{{/unless}}
				{{/each}}
			</ul>
	</div>

<div class = "col-lg-6">
	<h2> Burgers Devoured </h2>

		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<div class = 'row' >	
						<div class = 'col-sm-3'>
					<li>

						<strong>{{this.id}}. </strong> <i> {{this.burger_name}} </i>
							<input type="hidden" name="devoured" value="1"><br>
		  					<label for = 'burger'> 
		  					<input type = 'hidden' id = 'burger' name = 'name'>
						</div>
						<div class = 'col-sm-3'>
						<form  action="/{{this.id}}?_method=DELETE" method = "POST">
							<input type="hidden" name="devoured" value="1">
							<input type = 'hidden' id = 'burger' name = 'name'>
							<button type="submit"  id = 'devour-button' class="btn btn-danger">Delete</button>

							
						</form>
							</div>
						</div>
		  					 </label>
		  				

					</li>
				{{/if}}
			{{/each}}

		</ul>
	</div>
</div>




<h2> Add a burger </h2>
<form class ="create-update-form" action = "/" method = 'POST'>

	<div class = 'form-group'>
		<label for = 'burger'> Burger name: </label>
		<input type="text" class="form-control" placeholder="Add a burger." id = 'burger' name = 'burger_name'>
		
		<input type = 'hidden' id = 'burger' name = 'devoured' value = 0>
		<button type="submit" class="btn btn-info" id = 'add-button'> Add </button>

		</div>

	
</form>


